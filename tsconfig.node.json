{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* API compatibility settings */
    "moduleResolution": "Node", // Changed from "bundler" to "Node"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // Changed from true to false to allow emission of compiled JS
    "outDir": "dist", // Add output directory for compiled files
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* ES Module compatibility */
    "esModuleInterop": true
  },
  "include": ["vite.config.ts", "api/**/*.ts"] // Added API directory
}